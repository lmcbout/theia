    {
      "label": "[Task] clang-tidy",
      "type": "shell",
      "cwd": "${workspaceFolder}",
      "command": "clang-tidy",
      "args": [
        "${HOME}/theia/workspace-cpp/bird-flocking-sim-tbb/Vector.h"
      ],
      "options": {},
      "problemMatcher": {
        "name": "whatevername",
        "owner": "clang-tidy",
        "source": "TASKclang-tidy",
        "applyTo": "alldocuments",
        "fileLocation": [
          "absolute"
        ],
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+):\\s+(error|warning|info|note):\\s+(.+?)\\s+\\[(.+)\\]$",
            "file": 1,
            "line": 2,
            "character": 3,
            "severity": 4,
            "message": 5,
            "code": 6
          }
        ]
      }
    }
  ]
